@page
@model testPureLogin.Pages.LoginModel
@{
}


<h3>登入</h3>
<p>
    請輸入帳號密碼
</p>
<div class="col-6">
    <form method="post">
        @Html.AntiForgeryToken()
        帳號:
        <input name="fieldAccount" type="text" class="form-control" />
        <br />
        密碼:
        <input name="fieldPwd" type="password" class="form-control" />
        <br />
        <br />
        <button type="submit" asp-page-handler="Login" class="btn btn-primary">登入</button>
        <label>
            @Model.Msg
        </label>
    </form>
</div>
